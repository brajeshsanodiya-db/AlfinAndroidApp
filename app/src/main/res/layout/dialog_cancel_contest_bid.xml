<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/app_box_bg"
    android:elevation="4dp"
    android:paddingTop="16dp"
    android:paddingBottom="24dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4sp"
                android:text="Are you sure you want \nto Cancel you bid?"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="48dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
                    android:id="@+id/yes_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/app_button_bg"
                    android:gravity="center"
                    android:letterSpacing="0.03"
                    android:padding="12dp"
                    android:paddingStart="45dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="45dp"
                    android:paddingBottom="12dp"
                    android:text="YES"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
                    android:id="@+id/no_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/app_button_bg"
                    android:gravity="center"
                    android:letterSpacing="0.03"
                    android:padding="12dp"
                    android:paddingStart="45dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="45dp"
                    android:paddingBottom="12dp"
                    android:text="NO"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/close_dialog_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_close" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
