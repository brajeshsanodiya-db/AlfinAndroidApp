<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.profile.ProfileFragment">

    <include layout="@layout/toolbar_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/profile_bg"
                android:orientation="vertical"
                android:paddingStart="20dp">

                <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                    android:id="@+id/username_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:text="Pankaj Sharma"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                    android:id="@+id/userphone_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="90674 2378"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                    android:id="@+id/useremail_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="pankaj.masa@gmail.com"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="21dp"
                android:text="@string/address"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingStart="21dp"
                android:text="Outer Ring Road"
                android:textColor="#a9a9a9"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:background="#eeeeee" />

            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="4sp"
                android:paddingStart="21dp"
                android:text="@string/terms_and_conditions"
                android:textColor="#000000"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:background="#eeeeee" />

            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="4sp"
                android:paddingStart="21dp"
                android:text="@string/privacy_policy"
                android:textColor="#000000"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:background="#eeeeee" />

            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="4sp"
                android:paddingStart="21dp"
                android:text="@string/about"
                android:textColor="#000000"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:background="#eeeeee" />

            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="4sp"
                android:paddingStart="21dp"
                android:text="@string/rate_us"

                android:textColor="#000000"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:background="#eeeeee" />

            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="4sp"
                android:paddingStart="21dp"
                android:text="@string/contact_us"
                android:textColor="#000000"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="21dp"
                android:background="#eeeeee" />

            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:lineSpacingExtra="4sp"
                android:paddingStart="21dp"
                android:text="@string/share"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>