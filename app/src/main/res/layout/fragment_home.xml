<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/home_toolbar_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:text="@string/earn_alfin_coins_on_your_savings_naccount_balance"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/user_alfin_coin_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32.5dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32.5dp"
                        android:layout_marginBottom="24dp"
                        android:elevation="4dp"
                        android:visibility="visible"
                        app:cardCornerRadius="6dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:paddingTop="16dp">

                            <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                                android:id="@+id/mesg_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="32dp"
                                android:gravity="center_horizontal"
                                android:text="@string/your_savings_naccount_balance"
                                android:textColor="#d9000000"
                                android:textSize="12sp" />


                            <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                                android:id="@+id/mesg_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="32dp"
                                android:gravity="center_horizontal"
                                android:text="@string/your_alfin_coins"
                                android:textColor="#d9000000"
                                android:textSize="12sp"
                                tools:ignore="RelativeOverlap" />

                            <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mesg_1"
                                android:layout_marginStart="34.5dp"
                                android:layout_marginTop="12dp"
                                android:text="@string/rs_50_000"
                                android:textColor="#000000"
                                android:textSize="18sp" />

                            <RelativeLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mesg_2"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="41dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/content_desc"
                                    app:srcCompat="@drawable/ic_coin_bg" />

                                <com.alfinapp.ui.views.fontTextView.LatoBlackTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:letterSpacing="0.02"
                                    android:text="@string/_1000"
                                    android:textColor="#806103"
                                    android:textSize="30sp" />
                            </RelativeLayout>

                            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="16.6dp"
                                android:text="@string/every_rs_1000_earn_you_15_alfin_coins"
                                android:textColor="#888888"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sms_permission_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="24dp"
                        android:elevation="4dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="#df5555"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="18dp"
                                android:gravity="center_horizontal"
                                android:text="We dont have access to your SMS so you cannot earn Alfin coins on your account balance, Give access and earn Alfin coins."
                                android:textColor="#ffffff"
                                android:textSize="12sp" />

                            <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
                                android:id="@+id/bid_now_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="18dp"
                                android:background="@drawable/app_button_white_bg"
                                android:gravity="center"
                                android:letterSpacing="0.03"
                                android:padding="12dp"
                                android:paddingStart="45dp"
                                android:paddingTop="12dp"
                                android:paddingEnd="45dp"
                                android:paddingBottom="12dp"
                                android:text="GIVE ACCESS"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/last_day_earn_coin_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="24dp"
                        android:elevation="4dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="#f8bc18"
                        app:cardCornerRadius="6dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/content_desc"
                                android:src="@drawable/earn_coin_group" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center_horizontal"
                                    android:text="You earned"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <com.alfinapp.ui.views.fontTextView.LatoBlackTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="48dp"
                                    android:text="20"
                                    android:textColor="#000000"
                                    android:textSize="25sp" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp"
                                    android:gravity="center_horizontal"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    tools:text="This is your daily earning based on your balance \nmaintained yesterday" />

                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/dotted_line" />

                <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="28dp"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/use_your_alfin_coins_to_win_free_prizes"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <com.alfinapp.ui.views.WrapContentHeightViewPager
                    android:id="@+id/item_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp" />

                <com.shuhart.bubblepagerindicator.BubblePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="42dp"
                    android:layout_marginBottom="32dp"
                    app:bpi_fillColor="#040404"
                    app:bpi_marginBetweenCircles="3dp"
                    app:bpi_onSurfaceCount="@integer/default_bubble_indicator_on_surface_count"
                    app:bpi_pageColor="@color/white"
                    app:bpi_radius="4dp"
                    app:bpi_risingCount="@integer/default_bubble_indicator_rising_count" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="24dp">

                    <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/earn_more_alfin_coins"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32.5dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="32.5dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                                android:id="@+id/mesg_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:gravity="center_horizontal"
                                android:text="@string/refer_a_friend"
                                android:textColor="#d9000000"
                                android:textSize="12sp" />


                            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                                android:id="@+id/mesg_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="35.5dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="35.5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/share_this_code_to_refer"
                                android:textColor="#6f6f6f"
                                android:textSize="12sp"
                                tools:ignore="RelativeOverlap" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginStart="58dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="58dp"
                                android:layout_marginBottom="16dp"
                                android:background="@drawable/black_box_bg"
                                android:gravity="center">


                                <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="14.5dp"
                                    android:text="@string/_441234"
                                    android:textColor="#000000"
                                    android:textSize="12sp"
                                    tools:ignore="RelativeOverlap" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginEnd="14.5dp"
                                    android:contentDescription="@string/content_desc"
                                    app:srcCompat="@drawable/ic_upload" />
                            </RelativeLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32.5dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="32.5dp"
                        android:layout_marginBottom="24dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                                android:id="@+id/mesg_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:gravity="center_horizontal"
                                android:text="@string/buy_policy_from_agent"
                                android:textColor="#d9000000"
                                android:textSize="12sp" />


                            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                                android:id="@+id/mesg_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="35.5dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="35.5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/buy_any_policy_and_earn_alfin_coins"
                                android:textColor="#6f6f6f"
                                android:textSize="12sp"
                                tools:ignore="RelativeOverlap" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginStart="58dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="58dp"
                                android:layout_marginBottom="16dp"
                                android:background="@drawable/black_box_bg"
                                android:gravity="center">


                                <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/contact_agent"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginStart="58dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="58dp"
                                android:layout_marginBottom="16dp"
                                android:background="@drawable/app_button_bg"
                                android:gravity="center"
                                android:text="@string/call_back"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>