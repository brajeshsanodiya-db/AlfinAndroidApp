<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="22dp">

            <ImageView
                android:id="@+id/bid_item_iv"
                android:layout_width="54dp"
                android:layout_height="58dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="#f6f6f6"
                android:padding="7dp"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                android:id="@+id/bid_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/bid_item_iv"
                android:text="Washing Machine"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                android:id="@+id/view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bid_item_name_tv"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/bid_item_iv"
                android:text="View Details"
                android:textColor="#0091ff"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:background="#80bababa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/coins_image_view"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:contentDescription="@string/content_desc"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/single_coin" />

                    <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                        android:id="@+id/bid_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:gravity="center_horizontal"
                        android:text="8500"
                        android:textColor="#dca202"
                        android:textSize="16sp" />
                </LinearLayout>

                <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Bid Amount"
                    android:textColor="#6f6f6f"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
                    android:id="@+id/ranking_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/rank_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Rank"
                    android:textColor="#6f6f6f"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#80bababa" />

        <com.alfinapp.ui.views.fontTextView.LatoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/app_button_bg"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="EDIT BID"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Cancel Bid"
            android:textColor="#0091ff"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>