<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:text="Welcome to Alfin, We have gifted you 1000 Alfin Coins for joining us"
        android:textColor="#585858"
        android:textSize="12sp" />

    <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="5 mins ago"
        android:textColor="#585858"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#eeeeee" />
</LinearLayout>