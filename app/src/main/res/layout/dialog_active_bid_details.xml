<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/app_box_bg"
    android:elevation="4dp"
    android:paddingTop="16dp"
    android:paddingBottom="24dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:text="LG Washing Machine"
            android:textColor="#000000"
            android:textSize="18sp" />

        <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/active_bid_detail_desc"
            android:textColor="#000000"
            android:textSize="14sp" />

        <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="13 bids on this item"
            android:textColor="#6f6f6f"
            android:textSize="12sp" />

        <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bid ends in 02:00:45 hrs"
            android:textColor="#6f6f6f"
            android:textSize="12sp" />

        <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
            android:id="@+id/bid_now_text_view"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/app_button_bg"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:padding="12dp"
            android:paddingStart="45dp"
            android:paddingTop="12dp"
            android:paddingEnd="45dp"
            android:paddingBottom="12dp"
            android:text="OK"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
