<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Your Current Savings Account Balance"
            android:textColor="#d9000000"
            android:textSize="16sp" />

        <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Rs. 50,000"
            android:textColor="#000000"
            android:textSize="24sp" />

        <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="21dp"
            android:text="Every Rs.1000 earn you 15 Alfin Coins"
            android:textColor="#888888"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>