<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/app_box_bg"
    android:elevation="4dp"
    android:paddingTop="16dp"
    android:paddingBottom="24dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="center_horizontal"
                android:text="Enter your bid amount"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:paddingTop="4dp"
                    android:src="@drawable/single_coin" />

                <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="8500|"
                    android:textColor="#dca202"
                    android:textSize="23sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar_luminosite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:paddingTop="4dp"
                android:progress="20"
                android:progressDrawable="@drawable/seek_bar_drawable"
                android:splitTrack="false"
                android:thumb="@drawable/seek_bar_thumb" />

            <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
                android:id="@+id/bid_now_text_view"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/app_button_bg"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:padding="12dp"
                android:paddingStart="45dp"
                android:paddingTop="12dp"
                android:paddingEnd="45dp"
                android:paddingBottom="12dp"
                android:text="BID NOW"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/close_dialog_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_close" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
