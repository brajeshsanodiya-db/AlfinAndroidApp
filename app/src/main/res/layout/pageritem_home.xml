<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="WASHING-MACHINE"
            android:textColor="#000000"
            android:textSize="14sp" />

        <com.alfinapp.ui.views.fontTextView.LatoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:text="LG Washing Machine 20L Semi\n Automatic worth Rs 12000"
            android:textColor="#000000"
            android:textSize="12sp" />

        <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="13 bids on this item"
            android:textColor="#bdbdbd"
            android:textSize="12sp" />

        <com.alfinapp.ui.views.fontTextView.LatoHeavyTextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/app_button_bg"
            android:gravity="center_horizontal"
            android:letterSpacing="0.03"
            android:padding="12dp"
            android:text="BID NOW"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <com.alfinapp.ui.views.fontTextView.LatoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Bid ends in 02:00:45 hrs"
            android:textColor="#000000"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_launcher_foreground" />
    </LinearLayout>
</androidx.cardview.widget.CardView>